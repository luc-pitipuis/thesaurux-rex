<%= form_for @post, url: posts_path, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Add new book description" %>
    <%= f.file_field :book %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
