  <%= render 'shared/post_form' %>
  <% @posts.each do |post| %>
  <div class="well">
      <div class="media">
  		<div class="media-body">
    		<h4 class="media-heading"><%= link_to post.display_name, post %></h4>
          <p class="text-right">By <%= link_to post.user.email, post.user %></p>
          <p><%= raw(post.metadata.descriptions.map(&:content).join(", ")) %></p>
          <ul class="list-inline list-unstyled">
  			<li><span><i class="glyphicon glyphicon-calendar"></i> <%= time_ago_in_words(post.created_at) %> </span></li>
            <li>|</li>
            <span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
            <li>|</li>
            <li>
               <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
            </li>
            <li>|</li>
            <li>
            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
              <span><i class="fa fa-facebook-square"></i></span>
              <span><i class="fa fa-twitter-square"></i></span>
              <span><i class="fa fa-google-plus-square"></i></span>
            </li>
			</ul>
       </div>
    </div>
  </div> 
  <% end %>